<!doctype html>
<html>
<head>
    <title></title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link type="text/css" rel="stylesheet" href="/resource/css/framework.css" />
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="/semantic/dist/semantic.min.css">
    <link type="text/css" rel="stylesheet" href="/resource/css/main.css" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"/>
    <style>
        body         { padding-top:80px; width:100%; }
    </style>
</head>


  <body>
  <div class="page">

    <!-- Fixed navbar -->
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container my_custom_menu">

        <header>
          <div class="bigcontainer">
            <a href="http://klana.in">
              <div id="logo2"></div>
            </a>
          </div>
        </header>

        <div class="navbar-header">
          <p class="navbar-up">Nikmati beragam promo menarik berikut dengan kode "<u><b><%= agent.nickName%></b></u>"
              <br>Tekan
              <button type="button" class="btn btn-primary responsive-width" data-toggle="modal" data-target="#adSubsModal" data-ads-id="all">Subscribe</button>
              untuk mendapatkan update semua promo dari kami.
          </p>

        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">
      <% for(var i=0;i<adsAgentList.length;i++) { %>
        <div class="row">
          <div class="col-md-16">
          <button class="accordion responsive-width"><img src="<%= adsAgentList[i].imageUrl %>" class="img-responsive" style="width:100%; height:auto;"/></button>
          <div class="panel">
            <p>
              Kode promo : <b><%= adsAgentList[i].promoCode%></b>
              <br> <%- adsArray[i].tncBanner.replace(/\n/g,'<br>')%>
              <br><a class="btn btn-primary right responsive-width" href="/v/<%= adsAgentList[i]._id %>" role="button">Visit</a>
              <% if(adsArray[i].isMarketing.toString().localeCompare('true')==0){ %>
                  <!-- <a id="mymodalg" class="btn btn-primary right " role="button">Subscribe For More Offers</a> -->
                  <button type="button" class="btn btn-primary responsive-width" data-toggle="modal" data-target="#adSubsModal" data-ads-id="<%=adsArray[i]._id%>">Subscribe For More Offers</button>
              <%}%>
              <button type="button" class="btn btn-primary responsive-width" data-toggle="modal" data-target="#TnC" data-tnc="<%=adsArray[i].tncFull%>">T&C</button>
            </p>
          </div>
        </div>
      </div>
      <% } %>
    </div>


    <!-- ads Subs modal -->
    <div class="modal fade" id="adSubsModal" role="dialog">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close responsive-width" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Leave your information here</h4>
          </div>
          <div class="modal-body">
            <form name="form" action="/addSubscriber" method="post">
              <div class="form-group">
                <label>Full Name</label>
                <input type="text" class="form-control" placeholder="Full Name" id="fullName" name="fullName"/>
              </div>
              <div class="form-group">
                <label>Phone No.</label>
                <input type="text" class="form-control" placeholder="Phone No." id="phoneNo" name="phoneNo"/>
              </div>
              <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" placeholder="Email" id="email" name="email"/>
              </div>
              <input type="hidden" class="form-control" id="adsId" name="adsId"/>
              <input type="hidden" class="form-control" id="nickName" name="nickName" value="<%= agent.nickName%>"/>
              <button type="submit" class="btn btn-default responsive-width">Submit</button>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default responsive-width" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>

    <!--TNC modal -->
    <div class="modal fade" id="TnC" role="dialog">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close responsive-width" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Term and Condition</h4>
          </div>
          <div class="modal-body">
            <p id="tncFullModal"></p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default responsive-width" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
  </div>



  <footer>
    <div class="container my_custom_menu">
    	<div id="copyrights">
    		<div class="inset">
    			<div class="bigcontainer">
    				<div class="fl">
    					<h1>Klana</h1>
    					<p>&copy; 2017<br />
    				</div>
    			</div>
    		</div>
    	</div>
    </div>

  </footer>


    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script type="text/javascript" src="/resource/javascript/jquery.min.js"></script>
    <script src="/semantic/dist/components/accordion.js"></script>
    <script type="text/javascript" src="/semantic/dist/semantic.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script language='javascript'>
              $('#TnC').on('shown.bs.modal', function (e) {
                document.getElementById("tncFullModal").innerHTML=$(e.relatedTarget).data('tnc').replace(/\n/g,'<br>');
                $('#myInput').focus()
              })

              $('#adSubsModal').on('shown.bs.modal', function (e) {
                document.getElementById("adsId").value=$(e.relatedTarget).data('ads-id');
                $('#myInput').focus()
              })

             $(document).ready(function(){
                $('.ui.accordion').accordion();
                $('#adSubsModal').on('shown.bs.modal', function (e) {
                  document.getElementById("adsId").value=$(e.relatedTarget).data('ads-id');
                  $('#myInput').focus()
                })
                $('#TnC').on('shown.bs.modal', function (e) {
                  $('#myInput').focus()
                })
             });


    </script>

    <script language="javascript">
    var acc = document.getElementsByClassName("accordion");
var i;

for (i = 0; i < acc.length; i++) {
  acc[i].onclick = function(){
      /* Toggle between adding and removing the "active" class,
      to highlight the button that controls the panel */
      this.classList.toggle("active");

      /* Toggle between hiding and showing the active panel */
      var panel = this.nextElementSibling;
      if (panel.style.display === "block") {
          panel.style.display = "none";
      } else {
          panel.style.display = "block";
      }
  }
}
    </script>



  </body>

</html>
