    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script type="text/javascript" src="/resource/javascript/jquery.min.js"></script>
    <script src="/semantic/dist/components/accordion.js"></script>
    <script type="text/javascript" src="/semantic/dist/semantic.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script language='javascript'>
              $('#TnC').on('shown.bs.modal', function (e) {
                document.getElementById("tncFullModal").innerHTML=$(e.relatedTarget).data('tnc').replace(/\n/g,'<br>');
                $('#myInput').focus()
              })

              $('#adSubsModal').on('shown.bs.modal', function (e) {
                document.getElementById("adsId").value=$(e.relatedTarget).data('ads-id');
                $('#myInput').focus()
              })

             $(document).ready(function(){
                $('.ui.accordion').accordion();
                $('#adSubsModal').on('shown.bs.modal', function (e) {
                  document.getElementById("adsId").value=$(e.relatedTarget).data('ads-id');
                  $('#myInput').focus()
                })
                $('#TnC').on('shown.bs.modal', function (e) {
                  $('#myInput').focus()
                })
             });


    </script>

    <script language="javascript">
    var acc = document.getElementsByClassName("accordion");
var i;

for (i = 0; i < acc.length; i++) {
  acc[i].onclick = function(){
      /* Toggle between adding and removing the "active" class,
      to highlight the button that controls the panel */
      this.classList.toggle("active");

      /* Toggle between hiding and showing the active panel */
      var panel = this.nextElementSibling;
      if (panel.style.display === "block") {
          panel.style.display = "none";
      } else {
          panel.style.display = "block";
      }
  }
}
    </script>



  </body>

</html>
