</head>

  <body id="advBody" class="advBody">
    <div class="container">
  <div class="page">

    <!-- Fixed navbar -->
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container my_custom_menu">

        <header>

            <a href="http://klana.in">
              <div id="logo2"></div>
            </a>

        </header>

        <div class="navbar-header">
          <p class="navbar-up">Nikmati beragam promo menarik berikut</b></u>
              <br>Tekan
              <button type="button" class="btn btn-primary responsive-width" data-toggle="modal" data-target="#adSubsModal" data-ads-id="all">Subscribe</button>
              untuk mendapatkan update semua promo dari kami.
          </p>

        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container godown">
      <% for(var i=0;i<adsAgentList.length;i++) { %>
        <div class="row">
          <div class="col-md-16">
          <button class="accordion responsive-width"><img src="<%= adsAgentList[i].imageUrl %>" class="img-responsive" style="width:100%; height:auto;"/></button>
          <div class="panel">
            <p>
              Kode promo : <b><%= adsAgentList[i].promoCode%></b>
              <br> <%- adsArray[i].tncBanner.replace(/\n/g,'<br>')%>
              <br><a class="btn btn-primary right responsive-width" href="/v/<%= adsAgentList[i]._id %>" role="button">Masuk</a>
              <% if(adsArray[i].isMarketing.toString().localeCompare('true')==0){ %>
                  <!-- <a id="mymodalg" class="btn btn-primary right " role="button">Subscribe For More Offers</a> -->
                  <button type="button" class="btn btn-primary responsive-width" data-toggle="modal" data-target="#adSubsModal" data-ads-id="<%=adsArray[i]._id%>">Saya Tertarik!</button>
              <%}%>
              <button type="button" class="btn btn-primary responsive-width" data-toggle="modal" data-target="#TnC" data-tnc="<%=adsArray[i].tncFull%>">S&K</button>
            </p>
          </div>
        </div>
      </div>
      <% } %>
    </div>


    <!-- ads Subs modal -->
    <div class="modal fade" id="adSubsModal" role="dialog">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close responsive-width" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Tinggalkan Informasi Anda Disini</h4>
          </div>
          <div class="modal-body">
            <form name="form" action="/admin/addSubscriber" method="post">
              <div class="form-group">
                <label>Nama</label>
                <input type="text" class="form-control" placeholder="Nama" id="fullName" name="fullName"/>
              </div>
              <div class="form-group">
                <label>No. Handphone</label>
                <input type="text" class="form-control" placeholder="No. Handphone" id="phoneNo" name="phoneNo"/>
              </div>
              <div class="form-group">
                <label>Alamat Email</label>
                <input type="text" class="form-control" placeholder="Alamat Email" id="email" name="email"/>
              </div>
              <div class="form-group">
                <label>Notes</label>
                <textarea class="form-control" rows="5" id="note" name="note" placeholder="Notes"></textarea>
              </div>
              <input type="hidden" class="form-control" id="adsId" name="adsId"/>
              <input type="hidden" class="form-control" id="nickName" name="nickName" value="<%= agent.nickName%>"/>
              <button type="submit" class="btn btn-default responsive-width">Submit *</button>
            </form>
          </div>
          <div class="modal-footer">
            <p align="left" style="font-size:10px">* dengan mengklik tombol submit di bawah ini Anda telah menyetujui bahwa data yang Anda isi di atas dapat dipergunakan untuk keperluan pemasaran</p>
            <button type="button" class="btn btn-default responsive-width" data-dismiss="modal">Tutup</button>
          </div>
        </div>
      </div>
    </div>

    <!--TNC modal -->
    <div class="modal fade" id="TnC" role="dialog">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close responsive-width" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Syarat dan Ketentuan</h4>
          </div>
          <div class="modal-body">
            <p id="tncFullModal"></p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default responsive-width" data-dismiss="modal">Tutup</button>
          </div>
        </div>
      </div>
    </div>
  </div>



  <link href="https://fortawesome.github.io/Font-Awesome/assets/font-awesome/css/font-awesome.css" rel="stylesheet">
  <!--footer start from here-->
  <footer>
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-sm-6 footerleft ">
          <div class="logofooter"> <img src="/img/putih_2.png" class="img-footer" width="30%"> </div>
        </div>
      </div>
    </div>
  </footer>


